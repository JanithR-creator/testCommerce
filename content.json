        "/v0/Content/check-updates": {
            "post": {
                "tags": [
                    "Content"
                ],
                "summary": "Checks if products have updates from supplier",
                "description": "Checks if products have updates from supplier",
                "operationId": "post-v0-content-check-updates",
                "parameters": [
                    {
                        "name": "Cenium-Tenant-Id",
                        "in": "header",
                        "description": "Identifier which tenant we are working against.",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "description": "The request containing product IDs to check",
                    "content": {
                        "application/json-patch+json": {
                            "schema": {
                                "$ref": "#/components/schemas/CheckProductUpdatesRequest"
                            },
                            "example": {
                                "productIds": [
                                    "string"
                                ]
                            }
                        },
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CheckProductUpdatesRequest"
                            },
                            "example": {
                                "productIds": [
                                    "string"
                                ]
                            }
                        },
                        "text/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CheckProductUpdatesRequest"
                            },
                            "example": {
                                "productIds": [
                                    "string"
                                ]
                            }
                        },
                        "application/*+json": {
                            "schema": {
                                "$ref": "#/components/schemas/CheckProductUpdatesRequest"
                            },
                            "example": {
                                "productIds": [
                                    "string"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully checked products for updates",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/CheckProductUpdatesResponse"
                                },
                                "examples": {
                                    "default": {
                                        "value": null
                                    }
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CheckProductUpdatesResponse"
                                },
                                "example": {
                                    "products": [
                                        {
                                            "productId": "string",
                                            "hasUpdates": true
                                        }
                                    ]
                                }
                            },
                            "text/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CheckProductUpdatesResponse"
                                },
                                "example": {
                                    "products": [
                                        {
                                            "productId": "string",
                                            "hasUpdates": true
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
